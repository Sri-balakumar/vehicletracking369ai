<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Form View -->
    <record id="product_enquiry_form_view" model="ir.ui.view">
        <field name="name">product.enquiry.form</field>
        <field name="model">product.enquiry</field>
        <field name="arch" type="xml">
            <form string="Product Enquiry">
                <header>
                    <button name="action_validate"
                            string="VALIDATE"
                            type="object"
                            class="oe_highlight"
                            invisible="validated == True"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <field name="image" widget="image" class="oe_avatar"/>
                    <group>
                        <group string="Enquiry Details">
                            <field name="date"/>
                            <field name="product_name"/>
                            <field name="type"/>
                            <field name="sale_price"/>
                            <field name="company_id"/>
                            <field name="branch_id"/>
                        </group>
                        <group string="Customer Info">
                            <field name="customer_name"/>
                            <field name="customer_no"/>
                            <field name="customer_details"/>
                        </group>
                    </group>
                    <group>
                        <group string="Status">
                            <field name="action_taken"/>
                            <field name="validated"/>
                            <field name="validated_by" readonly="1"/>
                            <field name="validation_date" readonly="1"/>
                            <field name="create_uid" string="Created By" readonly="1"/>
                            <field name="module_type" readonly="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Details" name="details">
                            <field name="details" placeholder="Product details..."/>
                        </page>
                        <page string="Attachments" name="attachments">
                            <field name="attachment_ids">
                                <kanban>
                                    <field name="id"/>
                                    <field name="image_url"/>
                                    <field name="attachment"/>
                                    <field name="filename"/>
                                    <templates>
                                        <t t-name="card">
                                            <field name="attachment" widget="image" options="{'size': [200, 200]}"/>
                                            <field name="image_url" invisible="not image_url"/>
                                            <field name="filename" invisible="not filename"/>
                                        </t>
                                    </templates>
                                </kanban>
                                <form string="Attachment">
                                    <group>
                                        <field name="attachment" widget="image" filename="filename"/>
                                        <field name="filename"/>
                                        <field name="image_url" widget="url"/>
                                    </group>
                                </form>
                            </field>
                            <separator string="Signature / Drawing"/>
                            <field name="image_url" widget="image_url" string="Signature" options="{'size': [200, 200]}"/>
                            <separator string="Remarks"/>
                            <field name="remark" placeholder="Enter remarks here..."/>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- List View -->
    <record id="product_enquiry_list_view" model="ir.ui.view">
        <field name="name">product.enquiry.list</field>
        <field name="model">product.enquiry</field>
        <field name="arch" type="xml">
            <list string="Product Enquiry">
                <field name="name"/>
                <field name="date"/>
                <field name="product_name"/>
                <field name="type"/>
                <field name="customer_name"/>
                <field name="customer_no"/>
                <field name="sale_price"/>
                <field name="action_taken"/>
                <field name="validated"/>
                <field name="create_uid" string="Created By"/>
                <field name="validated_by"/>
                <field name="validation_date"/>
                <field name="company_id" optional="hide"/>
            </list>
        </field>
    </record>

    <!-- Search View -->
    <record id="product_enquiry_search_view" model="ir.ui.view">
        <field name="name">product.enquiry.search</field>
        <field name="model">product.enquiry</field>
        <field name="arch" type="xml">
            <search string="Product Enquiry">
                <field name="name"/>
                <field name="product_name"/>
                <field name="customer_name"/>
                <field name="customer_no"/>
                <filter name="validated" string="Validated" domain="[('validated', '=', True)]"/>
                <filter name="not_validated" string="Not Validated" domain="[('validated', '=', False)]"/>
                <separator/>
                <filter name="group_by_date" string="Date" context="{'group_by': 'date'}"/>
                <filter name="group_by_type" string="Type" context="{'group_by': 'type'}"/>
                <filter name="group_by_action" string="Action Taken" context="{'group_by': 'action_taken'}"/>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="product_enquiry_action" model="ir.actions.act_window">
        <field name="name">Product Enquiry</field>
        <field name="res_model">product.enquiry</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first Product Enquiry
            </p>
        </field>
    </record>

    <!-- Menu: Root (no action, acts as top-level menu) -->
    <menuitem id="product_enquiry_menu_root"
              name="Product Enquiry"
              sequence="100"/>

    <!-- Menu: Child (with action, appears under root) -->
    <menuitem id="product_enquiry_menu_main"
              name="Product Enquiries"
              parent="product_enquiry_menu_root"
              action="product_enquiry_action"
              sequence="10"/>

</odoo>
