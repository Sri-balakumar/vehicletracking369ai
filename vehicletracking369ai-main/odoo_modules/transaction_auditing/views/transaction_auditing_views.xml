<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Form View -->
    <record id="transaction_auditing_form_view" model="ir.ui.view">
        <field name="name">transaction.auditing.form</field>
        <field name="model">transaction.auditing</field>
        <field name="arch" type="xml">
            <form string="Transaction Auditing">
                <header>
                    <field name="sequence_no" readonly="1" nolabel="1"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="date"/>
                            <field name="inv_sequence_no" string="Sequence Number"/>
                            <field name="customer_name" string="Partner"/>
                            <field name="amount"/>
                            <field name="un_taxed_amount" string="Un Tax Amount"/>
                            <field name="register_payment_sequence_no"/>
                            <field name="warehouse_name" string="Warehouse"/>
                            <field name="company_name" string="Company"/>
                        </group>
                        <group>
                            <field name="collection_type_name" string="Transaction Auditing Type"/>
                            <field name="sales_person_name" string="Sales Person"/>
                            <field name="remarks" placeholder="Remarks"/>
                            <field name="customer_vendor_signature" widget="image" string="Customer Signature"/>
                            <field name="cashier_signature" widget="image" string="Cashier Signature"/>
                        </group>
                    </group>
                    <separator string="Attach Details"/>
                    <field name="attachment_ids">
                        <kanban>
                            <field name="id"/>
                            <field name="image_url"/>
                            <field name="attachment"/>
                            <field name="filename"/>
                            <templates>
                                <t t-name="card">
                                    <field name="attachment" widget="image" options="{'size': [200, 200]}"/>
                                    <field name="image_url" invisible="not image_url"/>
                                    <field name="filename" invisible="not filename"/>
                                </t>
                            </templates>
                        </kanban>
                        <form string="Attachment">
                            <group>
                                <field name="attachment" widget="image" filename="filename"/>
                                <field name="filename"/>
                                <field name="image_url" widget="url"/>
                            </group>
                        </form>
                    </field>
                </sheet>
            </form>
        </field>
    </record>

    <!-- List View -->
    <record id="transaction_auditing_list_view" model="ir.ui.view">
        <field name="name">transaction.auditing.list</field>
        <field name="model">transaction.auditing</field>
        <field name="arch" type="xml">
            <list string="Transaction Auditing">
                <field name="sequence_no"/>
                <field name="date"/>
                <field name="inv_sequence_no" string="Sequence Number"/>
                <field name="customer_name" string="Partner"/>
                <field name="amount"/>
                <field name="un_taxed_amount" string="Un Tax Amount"/>
                <field name="register_payment_sequence_no"/>
                <field name="warehouse_name" string="Warehouse"/>
                <field name="company_name" string="Company"/>
                <field name="collection_type_name" string="Auditing Type"/>
                <field name="sales_person_name" string="Sales Person"/>
            </list>
        </field>
    </record>

    <!-- Search View -->
    <record id="transaction_auditing_search_view" model="ir.ui.view">
        <field name="name">transaction.auditing.search</field>
        <field name="model">transaction.auditing</field>
        <field name="arch" type="xml">
            <search string="Transaction Auditing">
                <field name="sequence_no"/>
                <field name="customer_name"/>
                <field name="supplier_name"/>
                <field name="inv_sequence_no"/>
                <separator/>
                <filter name="filter_today" string="Today"
                        domain="[('date', '=', context_today())]"/>
                <separator/>
                <filter name="group_by_date" string="Date"
                        context="{'group_by': 'date'}"/>
                <filter name="group_by_customer" string="Customer"
                        context="{'group_by': 'customer_name'}"/>
                <filter name="group_by_collection" string="Collection Type"
                        context="{'group_by': 'collection_type_name'}"/>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="transaction_auditing_action" model="ir.actions.act_window">
        <field name="name">Transaction Auditing</field>
        <field name="res_model">transaction.auditing</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No auditing records yet. Scan a QR code from the mobile app to create one.
            </p>
        </field>
    </record>

    <!-- Menu: Root -->
    <menuitem id="transaction_auditing_menu_root"
              name="Transaction Auditing"
              sequence="110"/>

    <!-- Menu: Child -->
    <menuitem id="transaction_auditing_menu_main"
              name="Auditing Records"
              parent="transaction_auditing_menu_root"
              action="transaction_auditing_action"
              sequence="10"/>

</odoo>
