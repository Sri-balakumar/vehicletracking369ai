<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Door Detection Log - Tree View -->
    <record id="view_face_attendance_log_tree" model="ir.ui.view">
        <field name="name">face.attendance.log.tree</field>
        <field name="model">face.attendance.log</field>
        <field name="arch" type="xml">
            <tree string="Door Detection Log"
                  decoration-danger="has_app_checkout == False"
                  decoration-success="has_app_checkout == True">
                <field name="employee_id"/>
                <field name="detection_time"/>
                <field name="confidence" widget="progressbar"/>
                <field name="camera_name"/>
                <field name="has_app_checkout" string="App Check-in/out?"
                       widget="boolean_toggle" readonly="1"/>
                <field name="snapshot" widget="image" options="{'size': [40, 40]}"/>
            </tree>
        </field>
    </record>

    <!-- Door Detection Log - Form View -->
    <record id="view_face_attendance_log_form" model="ir.ui.view">
        <field name="name">face.attendance.log.form</field>
        <field name="model">face.attendance.log</field>
        <field name="arch" type="xml">
            <form string="Door Detection Log">
                <sheet>
                    <group>
                        <group>
                            <field name="employee_id"/>
                            <field name="detection_time"/>
                            <field name="has_app_checkout" widget="boolean_toggle" readonly="1"/>
                        </group>
                        <group>
                            <field name="confidence" widget="progressbar"/>
                            <field name="camera_name"/>
                        </group>
                    </group>
                    <group string="Snapshot">
                        <field name="snapshot" widget="image" class="oe_avatar"
                               options="{'size': [300, 300]}"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Door Detection Log - Search View -->
    <record id="view_face_attendance_log_search" model="ir.ui.view">
        <field name="name">face.attendance.log.search</field>
        <field name="model">face.attendance.log</field>
        <field name="arch" type="xml">
            <search string="Search Door Detections">
                <field name="employee_id"/>
                <field name="camera_name"/>
                <filter name="today" string="Today"
                        domain="[('detection_time', '>=', (context_today()).strftime('%%Y-%%m-%%d 00:00:00'))]"/>
                <filter name="this_week" string="This Week"
                        domain="[('detection_time', '>=', (context_today() - datetime.timedelta(days=context_today().weekday())).strftime('%%Y-%%m-%%d 00:00:00'))]"/>
                <filter name="no_checkout" string="No App Check-in/out (Suspicious)"
                        domain="[('has_app_checkout', '=', False)]"/>
                <separator/>
                <group expand="0" string="Group By">
                    <filter name="group_employee" string="Employee"
                            context="{'group_by': 'employee_id'}"/>
                    <filter name="group_date" string="Date"
                            context="{'group_by': 'detection_time:day'}"/>
                    <filter name="group_camera" string="Camera"
                            context="{'group_by': 'camera_name'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Door Detection Log - Action -->
    <record id="action_face_attendance_log" model="ir.actions.act_window">
        <field name="name">Door Detection Log</field>
        <field name="res_model">face.attendance.log</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_face_attendance_log_search"/>
        <field name="context">{'search_default_today': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No door detections yet
            </p>
            <p>
                Start the camera script to begin monitoring the office door.
            </p>
        </field>
    </record>

    <!-- ============================================================ -->
    <!-- Mismatch Report Wizard -->
    <!-- ============================================================ -->

    <record id="view_door_mismatch_report_form" model="ir.ui.view">
        <field name="name">face.door.mismatch.report.form</field>
        <field name="model">face.door.mismatch.report</field>
        <field name="arch" type="xml">
            <form string="Generate Mismatch Report">
                <group>
                    <group>
                        <field name="date_from"/>
                        <field name="date_to"/>
                    </group>
                    <group>
                        <field name="employee_ids" widget="many2many_tags"
                               placeholder="Leave empty for all employees"/>
                    </group>
                </group>
                <div class="text-muted">
                    <p>This report finds employees who were <strong>detected at the door by camera</strong>
                    but did <strong>NOT</strong> check-in or check-out through the app within 30 minutes.</p>
                    <p>These are suspicious movements â€” staff who left/entered without using the attendance app.</p>
                </div>
                <footer>
                    <button name="action_generate_report" type="object"
                            string="Generate Report" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_door_mismatch_report" model="ir.actions.act_window">
        <field name="name">Mismatch Report</field>
        <field name="res_model">face.door.mismatch.report</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <!-- Mismatch Report Lines - Tree View -->
    <record id="view_door_mismatch_line_tree" model="ir.ui.view">
        <field name="name">face.door.mismatch.line.tree</field>
        <field name="model">face.door.mismatch.line</field>
        <field name="arch" type="xml">
            <tree string="Mismatch Report" decoration-danger="1">
                <field name="employee_name"/>
                <field name="detection_time"/>
                <field name="confidence"/>
                <field name="camera_name"/>
                <field name="remark"/>
                <field name="snapshot" widget="image" options="{'size': [40, 40]}"/>
            </tree>
        </field>
    </record>

    <record id="action_door_mismatch_lines" model="ir.actions.act_window">
        <field name="name">Mismatch Results</field>
        <field name="res_model">face.door.mismatch.line</field>
        <field name="view_mode">tree</field>
        <field name="context">{'create': False}</field>
    </record>

</odoo>
